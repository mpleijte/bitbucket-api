{
  "compilerOptions": {
    "target" : "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src",
    "node_modules",
    "bower_components",
    "dist"
  ]
}